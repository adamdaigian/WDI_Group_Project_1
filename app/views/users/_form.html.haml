= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :uun
    = f.text_field :uun
    
  .field
    = f.label :password
    = f.password_field :password

  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
    
  .field
    = f.label :age
    = f.number_field :age
    
  .field
    = f.label :gender
    = f.text_field :gender
    
  .actions
    = f.submit 'Save'
